<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20211007215800000-0" author="victorximenis">
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>
    
    <changeSet author="victorximenis" id="20211007215800000-1">
    
    	<preConditions onFail="CONTINUE">
    		<not>
    			<tableExists tableName="pessoas"/>
    		</not>
    	</preConditions>
            
        <createTable tableName="pessoas">
            <column defaultValueComputed="${uuid_function}" name="id" type="${uuid_type}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pessoas_pkey"/>
            </column>
            <column name="nome" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="genero" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="data_nascimento" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>
    	
        <rollback>
        	<dropTable tableName="pessoas"/>
        </rollback> 
        
    </changeSet>

    <changeSet author="victorximenis" id="20211007215800000-2">

        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="inscricoes"/>
            </not>
        </preConditions>

        <createTable tableName="inscricoes">
            <column defaultValueComputed="${uuid_function}" name="id" type="${uuid_type}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="inscricoes_pkey"/>
            </column>
            <column name="pessoa_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="false" name="confirmado" type="BOOLEAN">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <rollback>
            <dropTable tableName="inscricoes"/>
        </rollback>

    </changeSet>

    <changeSet author="victorximenis" id="20211007215800000-3">

        <preConditions onFail="CONTINUE">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_pessoa_id" foreignKeyTableName="inscricoes"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseColumnNames="pessoa_id" baseTableName="inscricoes" constraintName="fk_pessoa_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="pessoas" validate="true" />

        <rollback>
            <dropForeignKeyConstraint constraintName="fk_pessoa_id" baseTableName="inscricoes"/>
        </rollback>

    </changeSet>
    
</databaseChangeLog>
